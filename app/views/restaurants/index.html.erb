<h1>All restaurants</h1>
<br>

<p><%= link_to 'Add a restaurant', new_restaurant_path(@restaurant) %></p>
<br>

<% @restaurants.each do |restaurant| %>
  <h2><%= link_to restaurant.name, restaurant_path(restaurant) %> (<%= restaurant.category %>) </h2>
  <p> <%= restaurant.phone_number %> | <%= restaurant.address %></p>
  <br>
<% end %>
